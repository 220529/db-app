[mysqld]
# 字符集
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci

# 性能优化
max_connections=200
max_allowed_packet=100M

# 时区
default-time-zone='+08:00'

# 日志
general_log=0
slow_query_log=1
slow_query_log_file=/var/lib/mysql/slow-query.log
long_query_time=2

[client]
default-character-set=utf8mb4

